@model  EasyBuy.Models.Promocion
@{
    ViewBag.Title = "_AgregarPromocion";
}
<br />

@using (Html.BeginForm("AgregarPromocion", "Producto", FormMethod.Post, new { role = "form", id = "FormGuardarPromocion" }))
{
    @*here role = "form" for bootstrap design (optional) *@
    @Html.ValidationSummary(true)
    @Html.AntiForgeryToken()
    @Html.Hidden("id_detalle", (String)ViewBag.id_detalle)

    <table class="tablacrearPlan" id="tablacrearPlan">
        <tr>
            <td class="etiqueta"><label>Nuevo Precio</label></td>
            <td class="etiqueta"><label>Fecha de inicio</label></td>
            <td class="etiqueta"><label>Fecha final</label></td>
        </tr>
        <tr>
            <td class="etiqueta">@Html.EditorFor(model => model.nuevo_precio, new { htmlAttributes = new { @class = "form-control", id = "nuevo_precio" } })</td>
            <td class="etiqueta">@Html.EditorFor(model => model.fecha_inicio, new { htmlAttributes = new { @class = "form-control", id = "fecha_inicio" } })</td>
            <td class="etiqueta">@Html.EditorFor(model => model.fecha_final, new { htmlAttributes = new { @class = "form-control", id = "fecha_final" } })</td>

        </tr>
        <tr>
            <td id="tdBoton">
                <input type="submit" value="Agregar Promocion" id="btnAgrede" class="boton" name="agregar" />
            </td>
        </tr>
    </table>

}


